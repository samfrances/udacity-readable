{
    "compilerOptions": {
        "outDir": "./build/",
        "sourceMap": true,
        "noImplicitAny": false,
        "module": "es6",
        "target": "es5",
        "jsx": "react",
        "typeRoots": [
          "node_modules/@types"
        ],
        "strictNullChecks": true,
        "moduleResolution": "node",
        "lib": ["es2017", "dom"]
    },
    "include": [
        "./src/**/*"
    ]
}